<body>
<h2 class="index-title">Books</h2>
	<table>
		<tr>
			<th class="table-title">Title</th>
			<th class="table-body">Body</th>
			<th class="table-btn" colspan="3"></th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book.id), class:"btn" %></td>
			<td><%= link_to "Edit", edit_book_path(book.id), class:"btn"%></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete , class:"btn"%></td>
		</tr>
		<% end %>
	</table>
<div class="form">
	<h3>New book</h3>
	<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	<div class="errors-box">
		<div class="errors-header"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
		<div class="error-messages">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
		</div>
	</div>
	<% end %>
	<div class="form-field">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</div>
	<div class="form-field" >
		<%= f.label :body, "Body" %>
		<%= f.text_area :body %>
	</div>
	<div class="form-field" >
		<%= f.submit 'Create Book', class: "submit-btn" %>
	</div>
	<% end %>
</div>
</body>